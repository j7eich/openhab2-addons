<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="avmtr064"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <!--FRITZ!Box Thing Type-->
    <thing-type id="fritzbox">
        <label>AVM FRITZ!Box</label>
        <description>AVM FRITZ!Box</description>
        <channel-groups>
        	<channel-group typeId="wanip" id="wanip" />
        </channel-groups>

        
    </thing-type><!--WAN IP Connection channels-->
    <channel-group-type id="wanip">
    	<label>Internet Connection</label>
    	<description>Group for several channels related to the Internet Connection</description>
    	<channels>
    		<channel typeId="conn-status" id="conn-status"></channel>
    	</channels>
    </channel-group-type>

    <!-- Sample Channel Type -->
    <channel-type id="conn-status">
        <item-type>String</item-type>
        <label>Connection Status</label>
        <description>Connection Status</description>
        <state readOnly="true"></state>
    </channel-type>

</thing:thing-descriptions>
